            }
        }

        &:first-of-type {
            .num {
                padding-left: 0;
            }
        }

        &:last-of-type {
            span {
                &:not(.num) {
                    padding-right: 0;
                }
            }
        }
    }

    .pr-img {
        @include flexbox();
        @include align-items(center);

        img {
            width: 45px;
        }

        .product-title {
            margin: 0 0 0 17px;
            span{
                color: #3c3c3c;
                font-weight: bold;
            }
        }
    }

    .sticky_group {
        @include flexbox();
        margin: 0 -10px;
        max-width: 312px;

        .pr-selectors,
        .quantity {
            padding: 0 10px;
            min-width: 110px;
        }
    }

    .action {
        text-align: right;
    }

    .sticky-add-to-cart {
        @include button_1();
        width: 100%;
        min-width: 195px;
        max-width: 100%;
        padding: 9px 15px 9px;
        margin-top: -2px;
        &:hover {
            @include button_2();
        }
    }

    .quantity {
        -webkit-box-flex: 0;
        -ms-flex: 0 0 110px;
        flex: 0 0 110px;
        max-width: 110px;
        .qty-group{
            width: 90px;
            input[name="quantity"]{
                width: 30px;
            }
            .button{
                width: 38px;
                height: 38px;
                &.plus,&.minus{
                    border: none;
                }
                &:before{
                    width: 10px;
                    height: 2px;
                }
                &:after{
                    height: 10px;
                    width: 2px;
                }
            }
        }
    }

    .pr-selectors {
        position: relative;
        -webkit-box-flex: 0;
        -ms-flex: 0 0 calc(100% - 110px);
        flex: 0 0 calc(100% - 110px);
        @include calc(max-width, '100% - 110px');

        .pr-active {
            position: relative;
            max-width: 100%;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            border: 1px solid $border_dropdown;
            display: block;
            padding: 8px 30px 6px 13px;
            color: {{ settings.color_variants }};
            cursor: pointer;
            background: {{ settings.bg_sticky }};

            &:before {
                right: 10px;
                position: absolute;
                top: 50%;
                content: "\f107";
                font: normal normal normal 18px/1 FontAwesome;
                @include transform(translateY(-50%));
            }
        }

        ul {
            padding: 0;
            list-style: none;
            position: absolute;
            top: auto;
            @include calc(width, '100% - 20px');
            @include calc(bottom, '100% - 1px');
            background: {{ settings.bg_sticky }};
            margin-bottom: 0;
            border: 1px solid $border_dropdown;
            overflow: auto;
            height: 0;
            @include opacity(0);
            @include transition(all .3s ease);

            li {
                a {
                    display:block;
                    padding: 5px 0;
                    color: {{ settings.color_variants }};

                    &:hover,
                    &.active {
                        color: #5572ad;
                    }
                }

                .sold-out{
                    color: #b6b6b6;
                    text-decoration: line-through!important;
                    pointer-events: none;
                }
            }
        }
    }

    &.open-sticky {
        .pr-selectors {
            ul {
                @include opacity(1);
                max-height: 290px;
                padding: 10px;
                height: inherit;
            }
        }
    }
}

.show_sticky {
    .sticky_form {
        @include transform(translate3d(0, 0, 0));
        @include opacity(1);
    }
}
