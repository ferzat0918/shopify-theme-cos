        margin-left: auto;
        margin-right: auto;
    }
    
    .slick-track {
        min-width: 100%;
    }
}

.slick-arrow {
    width: 40px;
    height: 40px;
    padding: 3px 0 0 0;
    background-color: transparent;
    border: none;
    // color: $color_slick_arrow;
    color: #000;
    position: absolute;
    cursor: pointer;
    top: 50%;
    @include transform(translateY(-50%));
    z-index: 1;
    outline: none;    
    @include transition(all .5s ease);
    @include border-radius(50%);
    svg{
        width: 17px;
        height: 33px;
        stroke-width: .2px;
    }
    .fa {
        font-size: 26px;
        font-weight: 500;
    }

    &.slick-prev {
        left: -4px;
        padding-right: 1px;
    }
    
    &.slick-next {
        right: -4px;
        padding-left: 2px;
    }

    &.slick-disabled {
        @include opacity(.3);
        cursor: default;
    }
}

.slick-dots {
    display: block;
    padding: 0;
    margin: 25px 0 0 0;
    text-align: center;
    letter-spacing: -.33em;
    line-height: 0;
    
    li {
        display: inline-block;
        font-size: 0px;
        margin: 0px 7px;
        width: 10px;
        height: 10px;
        letter-spacing: normal;
        
        button {
            width: 10px;
            height: 10px;
            @include border-radius(50%);
            border: 1px solid $border_slick_dots;
            background: $background_slick_dots;
            padding: 0;
            outline: none;
            cursor: pointer;
        }
        
        &.slick-active button {
            background: $background_slick_dots_active;
            border-color: $border_slick_dots_active;
        }
        
        &:first-child {
            margin-left: 0;
        }
        
        &:last-child {
            margin-right: 0;
        }
    }
}

